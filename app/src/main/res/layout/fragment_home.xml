<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">
    <ImageView
        android:id="@+id/img_teacher_home"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/img_teacher"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/list_class"
        android:layout_marginBottom="6dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:layout_toRightOf="@id/card_img_teacher" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_class"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/card_img_teacher"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btn_watch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_class"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button_home"
        android:textColor="@color/white"
        android:text="Xem lá»›p" />
</RelativeLayout>